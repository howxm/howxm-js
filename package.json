{
  "name": "howxm-js",
  "version": "0.0.8",
  "description": "Official NPM wrapper for the howxm JavaScript client",
  "main": "index.js",
  "repository": "https://github.com/howxm/howxm-js.git",
  "author": "fang.yang <yangfang2028@gmail.com>",
  "license": "MIT",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "keywords": [
    "Howxm"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c && tsc -d --emitDeclarationOnly --noEmit false --declarationDir dist",
    "start": "rollup -c -w",
    "prepare": "husky install && yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "format": "prettier --write .",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "yarn run test -- --coverage --watchAll=false",
    "release": "standard-version",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/runtime": "^7.3.1",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.22",
    "cross-env": "^5.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "2.8.6",
    "react": "^16.9.0",
    "react-scripts": "^3.4.0",
    "react-test-renderer": "^16.9.0",
    "rollup": "^2.26.9",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "tslib": "^2.0.1",
    "typescript": "^3.2.4"
  },
  "lint-staged": {
    "**/*": "prettier --write src/**/*.{ts,tsx} --ignore-unknown"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ]
  }
}
